/* miniprogram/pages/monthDetail/monthDetail.wxss */

.summary-content{
  background-color: #f6f7f9;
  height: 100%;
  width: 100%;
  overflow: scroll;
}
::-webkit-scrollbar{
  display: none;
  width: 0;
  height: 0;
  color:transparent;
} 

.detail-top{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  background-color: #ffda44;

}
.top-title{
  font-size: 36rpx;
  font-weight: bold;
  color: #1c1d21;
  margin-bottom:20rpx ;
}
.stage{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.avatar{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  /* box-shadow: 0 0 16rpx 5rpx #eee; */
  border: 4rpx solid #fff;
  background-color: #eee;
  margin: 20rpx 0 ;
  overflow: hidden;

}
.nickname{
  font-size: 36rpx;
  color: #1c1d21;
  font-weight: bold;
}
.register-history{
  font-size: 28rpx;
  color: #261f02;
  margin: 20rpx  0 30rpx 0;
}

.month-summary{
  background-color: #fff;
  padding: 40rpx 20rpx 20rpx 20rpx;
}
.month-title{
  height: 50 rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  color: #969696;
  margin-bottom: 20rpx;

}
.month-surplus{
  margin-left: 40rpx;

  font-size: 36rpx;
  color: #1c1d21;
  font-weight: bold;
}

.month-chart{
  display: flex;
  height: 100rpx;

}
.chart-title{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
  width: 100rpx;
  font-size: 28rpx;
  color: #969696;
  border-right: 1rpx solid #eee;
}
.chart-title>view{
  height: 40rpx;
}
.chart-prograss{
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-direction: column;
  flex:1;
}
.chart-zhichu,.chart-shouru{
  height: 20rpx;
  width: 100%;
}
.progress{
position: relative;
height: 100%;
border-top-right-radius: 20rpx;
border-bottom-right-radius: 20rpx;
}

.num{
  font-size: 24rpx;
  color: #1c1d21;
  position: absolute;
  right: -50rpx;
  top: 50%;
  transform: translateY(-50%);
}

.month-type{
  width: 100%;
  background-color: #fff;
  margin-top: 20rpx;
}
