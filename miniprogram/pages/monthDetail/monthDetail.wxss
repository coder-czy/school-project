/* miniprogram/pages/monthDetail/monthDetail.wxss */

.summary-content{
  background-color: #f6f7f9;
  height: 100%;
  width: 100%;
  overflow: scroll;
}
::-webkit-scrollbar{
  display: none;
  width: 0;
  height: 0;
  color:transparent;
} 

.detail-top{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  background-color: #ffda44;

}
.top-title{
  font-size: 36rpx;
  font-weight: bold;
  color: #1c1d21;
  margin-bottom:20rpx ;
}
.stage{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.avatar{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  /* box-shadow: 0 0 16rpx 5rpx #eee; */
  border: 4rpx solid #fff;
  background-color: #eee;
  margin: 20rpx 0 ;
  overflow: hidden;

}
.nickname{
  font-size: 36rpx;
  color: #1c1d21;
  font-weight: bold;
}
.register-history{
  font-size: 28rpx;
  color: #261f02;
  margin: 20rpx  0 30rpx 0;
}

.month-summary{
  background-color: #fff;
  padding: 40rpx 20rpx 20rpx 20rpx;
}
.month-title{
  height: 50 rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  color: #969696;
  margin-bottom: 20rpx;

}
.month-surplus{
  margin-left: 40rpx;

  font-size: 36rpx;
  color: #1c1d21;
  font-weight: bold;
}

.month-chart{
  display: flex;
  height: 100rpx;

}
.chart-title{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
  width: 100rpx;
  font-size: 28rpx;
  color: #969696;
  border-right: 1rpx solid #eee;
}
.chart-title>view{
  height: 40rpx;
}
.chart-prograss{
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-direction: column;
  flex:1;
}
.chart-zhichu,.chart-shouru{
  height: 20rpx;
  width: 100%;
}
.progress{
position: relative;
height: 100%;
max-width: 85%;
border-top-right-radius: 20rpx;
border-bottom-right-radius: 20rpx;
}

.num{
  font-size: 24rpx;
  color: #1c1d21;
  position: absolute;
  right: -100rpx;
  top: 50%;
  transform: translateY(-50%);
}

.zhichu-rank{
  font-size: 24rpx;
  color: #8b8b8b;
  margin-left: 20rpx;
  margin-bottom: 10rpx;
}

.list{
  background-color: #fff;
}
.list-item{
  padding: 20rpx;
  padding-right: 40rpx;
  margin: 10rpx 0;
}
.list-item:nth-child(1){
  margin-top:0 ;
}
.list-item-rank{
  width:80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 32rpx;
  color: #909090;
}
.list-item-img{
  width: 80rpx;
  height: 80rpx;
  background-color: #ddd;
  border-radius: 50%;
}
.list-icon{
  height: 80rpx;
}
.list-info{
  margin-left: 20rpx;
  height: 80rpx;
  padding: 10rpx 0 10rox 20rpx;
  width: calc(100% - 180rpx);
  /* border-bottom: 1rpx solid #e8e8e8 */
}
.list-item-money{
  font-size: 28rpx;
  line-height: 80rpx;
  color: #343233;
}
/* .list-item-money.shouru{
  color: #e4393c;
}
.list-item-money.zhichu{
  color: #00b26a;
} */
.list-item-describe{
  color: #666;
  font-size: 22rpx;
}
.top-text{
  height: 50rpx;
}
.comment{
  height: 30rpx;
  line-height: 30rpx
  
}
.type{
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 40rpx;
}
.not-comment{
  line-height: 80rpx
}
.shouru{
  color: #e4393c
}
.zhichu{
  color: #00b26a
}
.date{
  margin-left: 40rpx;
  
}
.account{
width: 80rpx;
}


.month-type{
  width: 100%;
  background-color: #fff;
  margin-top: 20rpx;
  padding-bottom: 20rpx;
}

.type-title {
  height: 80rpx;
  line-height: 80rpx;
  margin-right:30rpx ;
}
.qushi-box{
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  width: 100%;
  margin-bottom: 40rpx;
}
.zhichu-qushi{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  text-align: left;
}

.qushi-title{
  font-size: 26rpx;
  color: #999999;
  width: 100%;
}
.qushi-num{
  font-size: 36rpx;
  color: #1b1d21;
  font-weight: bold;
  margin-top: 20rpx;
  width: 100%;

}

.empty{
  width: 100%;
  height: 800rpx;
  line-height: 800rpx;
  text-align: center;
  color: #343434;
  font-size: 36rpx;
}

.hide{
  display: none;
}