.bill-bg{
  width: 100%;
  height: 240rpx;
  background-color: #ffda44;
  padding: 0 20rpx 20rpx 0;
  box-sizing: border-box;

}
.year{
  position: relative;
  padding-left: 20rpx;
}
.triangle{
  position: absolute;
  left: 140rpx;
  top: 50%;
  transform: translateY(-30%);

}
.main-text{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  font-size: 28rpx;
  color: #444;
  text-align: center;
}

.surplus-text{
  font-size: 28rpx;
  color: #444;
  text-align: center;
  margin: 20rpx 0;
}
.surplus{
font-size: 60rpx;
color: #343233;
text-align: center;
font-weight: 400;
margin: 20rpx 0;

}
.shouru,.zhichu{
  width: 50%;
  text-align: center;
}
.shouru{
  border-right: 1rpx solid #343233;
  box-sizing: border-box;

}
.text{
  color: #444;
  font-size: 20rpx;
}
.num{
  color:#343233;
  font-size: 28rpx;
  font-weight: 400;
}
.classify{
  margin: 20rpx 0;
}
.month-list{
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 20rpx;
  color: #969696;
  border-bottom: 1rpx solid #eaeaea;
}

.month{
  width: 120rpx;
}
.arrow{
  margin-right: 10rpx;
  width: 40rpx;

}
.list-item{
  width: calc(100% / 3 - 200rpx / 3);
}
.list{
  font-size: 28rpx;
  color: #343233;
  padding: 20rpx 0;
}
.bill-content{
  position: fixed;
  top: 240rpx;
  left: 0;
  right: 0;
  bottom: 100rpx;
  overflow: scroll;
}
