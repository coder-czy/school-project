/* miniprogram/pages/chart/chart.wxss */
.tab{
  position: fixed;
  right: 0;
  left: 0;
  top: 0;
  height: 100rpx;
  background-color: #ffda44;
  padding: 0 20rpx;
  z-index: 1;
}

.pay-item,.time-item{
  height: 50rpx;
  line-height: 50rpx;
}

.pay-type{
  width: 220rpx;
  border-radius: 8rpx;
  border: 1rpx solid #343233;
  box-sizing: border-box;
  margin-top: 25rpx;

}
.time-type{
  width: 330rpx;
  border-radius: 8rpx;
  border: 1rpx solid #343233;
  overflow: hidden;
  box-sizing: border-box;
  box-sizing: border-box;
  margin-top: 25rpx;


}
.pay-item{
  color: pay-item;
  font-size: 28rpx;
  width: 50%;
  text-align: center;

}
.time-item{
  color: pay-item;
  font-size: 28rpx;
  width: 33.33%;
  text-align: center;

}
.time-item:nth-child(2){
  border-left: 1rpx solid #343434;
  border-right: 1rpx solid #343434;
  box-sizing: border-box;
}
.pay-item.active{
  background-color: #343434;
  color: #ffda44;
}
.time-item.active{
  background-color: #343434;
  color: #ffda44;
}
.pie{
  height: 820rpx;
  /* background-color: #fff; */
  margin-top: 20rpx;
}

ec-canvas {
  width: 100%;
  height: 70%;
  background: #eee;
}


.total{
  /* margin-top: 250px; */
  height: 36rpx;
  line-height: 36rpx;
  border-left: 8rpx solid #ffda44;
  padding-left: 20rpx;
  margin: 10rpx 20rpx 0 20rpx;
  font-size: 28rpx;
  color: #343233;
  
}

.rank-content{
padding-left:20rpx ;

}
.rank{
  margin-bottom: 20rpx;
}
.rank-title{
  
    /* margin-top: 250px; */
    height: 36rpx;
    line-height: 36rpx;
    border-left: 8rpx solid #ffda44;
    padding-left: 20rpx;
    margin: 20rpx;
    margin-bottom: 10rpx;
    font-size: 28rpx;
    color: #343233;
    
  
}

.rank{
  display: flex;
  color: #343233;

  align-items: center;
  width: 100%;
  padding: 10rpx 0;
}

.rank-img{
  width: 80rpx;
  height: 80rpx;
  background-color: #ddd;
  border-radius: 50%;
  margin-right: 20rpx;
}
.rank-right{
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  height: 80rpx;
  width: calc(100% - 140rpx);
  font-size: 28rpx;

}
.rank-progress{
  height: 10rpx;
  border-radius: 10rpx;
  background-color: #eee;
  width: 100%;
  overflow: hidden;

}
.title{
  margin-right: 10rpx;
}

.bar{
  height: 100%;
  background-color: #ffda44;
}

.empty{
  width: 100%;
  height: 100%;
  line-height: 800rpx;
  text-align: center;
  color: #343434;
  font-size: 36rpx;
}
.hide{
  display: none;
}

.chart-content{
  margin-top: 100rpx;
  height: calc(100% - 200rpx);
  overflow: scroll;
}