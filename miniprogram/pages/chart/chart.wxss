/* miniprogram/pages/chart/chart.wxss */
.tab{
  padding: 20rpx 20rpx;
  background-color: #ffda44;

}
.pay-type{
  width: 220rpx;
  border-radius: 8rpx;
  border: 1rpx solid #343233;


}
.time-type{
  width: 330rpx;
  border-radius: 8rpx;
  border: 1rpx solid #343233;
  overflow: hidden;
  box-sizing: border-box;
}
.pay-item{
  color: pay-item;
  font-size: 28rpx;
  padding: 10rpx 0;
  width: 50%;
  text-align: center;

}
.time-item{
  color: pay-item;
  font-size: 28rpx;
  padding: 10rpx 0;
  width: 33.33%;
  text-align: center;

}
.time-item:nth-child(2){
  border-left: 1rpx solid #343434;
  border-right: 1rpx solid #343434;
  box-sizing: border-box;
}
.pay-item.active{
  background-color: #343434;
  color: #ffda44;
}
.time-item.active{
  background-color: #343434;
  color: #ffda44;
}
.pie{
  height: 820rpx;
  /* background-color: #fff; */
  margin-top: 20rpx;
}

ec-canvas {
  width: 100%;
  height: 70%;
  background: #eee;
}


.total{
  /* margin-top: 250px; */
  border-left: 8rpx solid #ffda44;
  padding-left: 20rpx;
  margin: 20rpx;
  font-size: 28rpx;
  color: #343233;
  
}

.rank-title{
  
    /* margin-top: 250px; */
    border-left: 8rpx solid #ffda44;
    padding-left: 20rpx;
    margin: 20rpx;
    font-size: 28rpx;
    color: #343233;
    
  
}

.rank{
  display: flex;
  color: #343233;

  align-items: center;
  width: 100%;
  padding: 10rpx 20rpx;
}

.rank-img{
  width: 80rpx;
  height: 80rpx;
  background-color: #ddd;
  border-radius: 50%;
  margin-right: 20rpx;
}
.rank-right{
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  height: 80rpx;
  width: calc(100% - 140rpx);
  font-size: 28rpx;

}
.rank-progress{
  height: 10rpx;
  border-radius: 10rpx;
  background-color: #eee;
  width: 100%;
  overflow: hidden;

}
.title{
  margin-right: 10rpx;
}

.bar{
  height: 100%;
  background-color: #ffda44;
}