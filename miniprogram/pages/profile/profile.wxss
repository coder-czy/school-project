  position: absolute;
  top: 250rpx;
  left: 0;
  background-color: #fff;
  border-radius: 8rpx;
  overflow: scroll;
  padding-left:20rpx;
  /* margin-bottom: 120rpx; */
}

.month{
  font-size: 32rpx;
  color: #444344;
  width: 120rpx;
  height: 100%;
  position: relative;
  border-right: 0.5rpx solid #444344;
  
}

.month-num{
  font-size: 54rpx;
