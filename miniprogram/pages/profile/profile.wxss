/* miniprogram/pages/profile/profile.wxss */

.top-bg{
  width: 100%;
  background-color: #ffda44;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  padding-bottom: 60rpx;
}

.profile-top{
  padding: 0 20rpx;
  height: 120rpx;
  line-height: 120rpx;
}

.avatar{
width: 120rpx;
height: 120rpx;
border-radius: 50%;
background-color: #ddd;
margin-right: 30rpx;
border: 4rpx solid #fff;
}

.attendance-img{
width: 40rpx;
height: 40rpx;
}

.attendance{
  width: 110rpx;
  height: 40rpx;
  background-color: #fff;
  font-size: 28rpx;
  border-radius:40rpx ;
  margin-top: 30rpx;
  padding: 10rpx 20rpx;
}
.nickname{
  font-size: 36rpx;
  font-weight: bold;
}

.text{
  line-height: 40rpx;
}

.a-img{
  width: 100%;
}
.profile-bottom{
padding: 0 20rpx;
margin: 20rpx 0;
}

.profile-item{
  width: calc(100% / 3 - 40rpx / 3);
  text-align: center;

}
.item-num{
  font-size: 40rpx;
  font-weight: bold;
}
.item-text{
  font-size: 28rpx;
  color: #444;
}

.container{
  height: calc(100% - 350rpx);
  margin: 0 20rpx;
  width: calc(100% - 60rpx);
  position: absolute;
  top: 250rpx;
  left: 0;
  background-color: #fff;
  border-radius: 8rpx;
  overflow: scroll;
  padding-left:20rpx;
  /* margin-bottom: 120rpx; */
}

.month{
  font-size: 32rpx;
  color: #444344;
  width: 120rpx;
  height: 100%;
  position: relative;
  border-right: 0.5rpx solid #444344;
  
}

.month-num{
  font-size: 54rpx;
  color:#444344 ;
}
.bill{
  margin-bottom: 20rpx;
}
.arrow{
width: 40rpx;
height:40rpx;
}

.bill-title {
  padding: 20rpx 0;
  padding-right: 10rpx;
}
.content-item{
  width: calc(100% / 3);
  text-align: center;
}
.item-title{
  color:#888;
  font-size: 28rpx;
}
.item-num{
  color:#444344;
  font-size: 32rpx;
  font-weight: normal;
}
.right{
  width: calc(100% - 122rpx);
}
.left{
  height: 100%;
  padding-top: 10rpx;
}

.all{
color: #b8b8ba;
font-size: 32rpx;
}
.budget{
  margin-top: 60rpx;
}
.budget-arrow{
  margin-top: 4rpx;
}
.all-img{
  width: 100%;
}
.round{
  width: 240rpx;
  height: 240rpx;
  margin-right: 40rpx;
  background-color: #ddd;
  border-radius: 50%;
}
.budget-content {
  margin-top: 30rpx;
  height: 240rpx;
}
.budget-box{
  padding-right:10rpx ;
}

.content-right {
  height: 100%;
  width: calc(100% - 300rpx);
  margin-top: 15rpx;
  padding-right: 20rpx;
}
.surplus-budget,.month-budget{
 height: 70rpx;
 line-height: 70rpx;
  width: 100%;
  font-size: 28rpx;
  color: #444;
 

}
.surplus-budget{
  color: #444344;
  font-size: 32rpx;
  border-bottom: 1rpx solid #888;
}