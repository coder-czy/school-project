  font-size: 28rpx;
}
.item-num{
  color:#444344;
  font-size: 32rpx;
  font-weight: normal;
}
.right{
  width: calc(100% - 122rpx);
}
.left{
  height: 100%;
  padding-top: 10rpx;
}

.all{
